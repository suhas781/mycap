# Backend environment (copy to .env and fill for local dev; set same names in production)
PORT=3001

# Option 1: Single URL (Railway, Render, etc.)
# DATABASE_URL=postgresql://user:password@host:5432/mycap?sslmode=require

# Option 2: Separate DB vars
DB_HOST=localhost
DB_PORT=5432
DB_NAME=mycap
DB_USER=postgres
DB_PASSWORD=

# Set to true for cloud Postgres (when not using DATABASE_URL)
# DB_SSL=true

# JWT signing (use a long random string in production)
# JWT_SECRET=your-secret-here
